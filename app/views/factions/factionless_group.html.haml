    = link_to 'Factions', factions_path
  %li.breadcrumb-item= link_to 'Faction-less Groups', factionless_groups_path
  %li.breadcrumb-item.active= @group.name

.panel.panel-default
  .panel-body
    - @group.rats.each do |rat|
      %p= link_to rat.name, rats_path(rat.id)