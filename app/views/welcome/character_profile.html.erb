<table class="table table-striped">
  <caption>Earnings - Last 10 Days</caption>
  <thead>
    <tr>
      <th>Date</th>
      <th></th>
      <th class="numeric">Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @bounty_by_day.each do |record| %>
      <tr>
        <td><%= record.date %></td>
        <td><%= isk_image %></td>
        <td class="numeric"><%= number_to_isk record.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>

