<table class="table table-striped">
  <caption>
    Ticks Journal
    <span class="pull-right"><%= link_to 'More', character_journal_path(@character) %></span>
  </caption>
  <thead>
    <tr>
      <th class="icon"></th>
      <th>Timestamp</th>
      <th>Details</th>
      <th></th>
      <th class="numeric">Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @ticks.each do |record| %>
      <tr>
        <td><%= record_icon(record) %></td>
        <td><%= record.ts %></td>
        <td><%= record_details(record) %></td>
        <td>
          <% record.kills.each do |kill| %>
            <%= kill_image(kill) %>
          <% end %>
        </td>
        <td class="numeric"><%= number_to_isk record.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @ticks %>